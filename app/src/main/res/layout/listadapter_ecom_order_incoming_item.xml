<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.vsa.columbus"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/request_summary_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme"
        app2:cardElevation="@dimen/fui_button_inset_bottom"
        app2:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app2:layout_constraintEnd_toEndOf="parent"
                    app2:layout_constraintStart_toStartOf="parent"
                    app2:layout_constraintTop_toTopOf="@+id/vehicle_status">

                    <TextView
                        android:id="@+id/reqId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:text="34545"
                        android:textStyle="normal|bold"
                        app2:layout_constraintStart_toStartOf="parent"
                        app2:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/customerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:text="Surajbhan Singh"
                        android:textStyle="bold"
                        app2:layout_constraintStart_toEndOf="@+id/reqId"
                        app2:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/customerAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="Rambagh Colony, Purandhan, Goa -243323, Rambagh Colony, Purandhan, Goa -243323,Rambagh Colony, Purandhan, Goa -243323"
                        android:textSize="12sp"
                        app2:layout_constraintBottom_toBottomOf="parent"
                        app2:layout_constraintEnd_toStartOf="@+id/time"
                        app2:layout_constraintStart_toStartOf="parent"
                        app2:layout_constraintTop_toBottomOf="@+id/reqId"
                        app2:layout_constraintVertical_bias="1.0" />

                    <ImageView
                        android:id="@+id/statusImage"
                        android:layout_width="30dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="4dp"
                        app2:layout_constraintBottom_toBottomOf="@+id/time"
                        app2:layout_constraintEnd_toStartOf="@+id/time"
                        app2:layout_constraintHorizontal_bias="1.0"
                        app2:layout_constraintStart_toEndOf="@+id/customerName"
                        app2:layout_constraintTop_toTopOf="parent"
                        app2:srcCompat="@drawable/clock_fg" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="8dp"
                        android:text="22:35"
                        android:textSize="12sp"
                        app2:layout_constraintEnd_toEndOf="parent"
                        app2:layout_constraintTop_toBottomOf="@+id/statusImage"
                        app2:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
