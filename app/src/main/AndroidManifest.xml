<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crisprupee.cashex">

    <uses-permission android:name="android.permission.INTERNET" />

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.crisprupee.cashex.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.crisprupee.cashex.VehicleListActivity"
            android:parentActivityName="com.crisprupee.cashex.MainActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.crisprupee.cashex.OGCashListActivity"
            android:label="@string/title_activity_maps"
            android:parentActivityName="com.crisprupee.cashex.MainActivity" />
        <activity
            android:name="com.crisprupee.cashex.AddCashRequestActivity"
            android:label="@string/title_activity_maps_all"
            android:parentActivityName="com.crisprupee.cashex.MainActivity" />
        <activity
            android:name="com.crisprupee.cashex.tracking.ReplayActivity"
            android:label="@string/title_activity_replay"
            android:parentActivityName="com.crisprupee.cashex.MainActivity"></activity>
        <activity
            android:name="com.crisprupee.cashex.VehicleSettingActivity"
            android:parentActivityName="com.crisprupee.cashex.MainActivity"></activity>

        <service android:name="com.crisprupee.cashex.messaging.MessageService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>